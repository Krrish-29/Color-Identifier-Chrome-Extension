{
    "name": "Color Identifier",
    "version": "1.0",
    "description": "Get HEX color codes from any website ,wepage or image.",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
    "service_worker": "background.js"
    },
    "manifest_version": 3,
    "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": [
        "content.js",
        "html2canvas.min.js"
    ],
    "run_at": "document_idle"
  }
],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
